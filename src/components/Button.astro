---
export interface Props {
  style?: string;
  href?: string;
}

const { style, href } = Astro.props;

const Element = href ? 'a' : 'button';
---

<Element class="custom_button" style={style} href={href}><slot /></Element>

<style>
  .custom_button {
    font-family: 'Roboto Bold';
    margin-top: 23px;
    margin-bottom: 40px;
    height: 58px;
    border: none;
    background-color: var(--dark-slate-grey);
    color: white;
    border-radius: 7px;
  }

  @media screen and (min-width: 1000px) {
    .custom_button {
      margin-top: 24px;
      margin-bottom: 97px;
    }
  }
</style>
