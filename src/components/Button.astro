---
export interface Props {
  style?: string;
  href?: string;
  class?: string;
}

const { style, href, class: className } = Astro.props;

const Element = href ? 'a' : 'button';
---

<Element class:list={[className, 'custom_button']} style={style} href={href}>
  <slot />
</Element>

<style>
  .custom_button {
    font-family: 'Roboto Bold';
    margin-top: 23px;
    margin-bottom: 40px;
    height: 58px;
    border: none;
    background-color: var(--dark-slate-grey);
    color: white;
    border-radius: 7px;
  }

  a {
    text-decoration: none;
    padding-top: 2px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media screen and (min-width: 1000px) {
    .custom_button {
      margin-top: 24px;
      margin-bottom: 97px;
    }
  }
</style>
